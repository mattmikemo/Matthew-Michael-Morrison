<script>
import { inView, animate } from "motion";

inView(".project", ({ target }) => {
  animate(
    target.querySelector("div"),
    { y: -200 },
    { opacity: 1},
    { delay: 0.9, duration: 1, easing: [0.17, 0.55, 0.55, 1] }
  );
});

</script>


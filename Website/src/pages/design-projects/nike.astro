	main {width: 80%; margin: 0 auto;}
	input[type="checkbox"]:checked ~ #BlackBurst {color: aqua;}
    /* Hero Image Styling */
    .project-hero {
    display: flex;
    background-image: url("https://via.placeholder.com/1800x735");
    width: 100%;
    align-self: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    align-items: center;
    justify-content: center;
}

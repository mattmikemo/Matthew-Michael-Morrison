---
const { VideoSource, VideoTitle, VideoPoster, VideoType, VideoAuto, VideoLoop } = Astro.props;
import 'vidstack/styles/defaults.css'

import { defineCustomElements } from 'vidstack/elements';

defineCustomElements();
---

<style></style>
  
<media-player
  title={VideoTitle}
  src={VideoSource} type={VideoType}
  poster={VideoPoster}
  thumbnails="https://media-files.vidstack.io/sprite-fight/thumbnails.vtt"
  aria-controls=""
  controls
  aspect-ratio="16/9"
  crossorigin
  Autoplay={VideoAuto}
  Loop={VideoLoop}
>
  <media-outlet>
   

  </media-outlet>
</media-player>

<script>
    import { defineCustomElements } from 'vidstack/elements';

    defineCustomElements();
</script>